<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_view_decorator"
        android:layout_width="200sp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:cornerFamily="rounded"
        app:cornerSize="10%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_favourite"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/img_view_decorator">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_view_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="25dp"
                android:textAppearance="?attr/textAppearanceHeadline3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Artist name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_view_album_name_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/album_details_album_name_hint"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_artist_name"
                app:layout_constraintWidth_percent=".5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_view_play_count_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/album_details_album_playcount_hint"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_artist_name"
                app:layout_constraintWidth_percent=".5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_view_album_name_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_album_name_label"
                app:layout_constraintWidth_percent=".5"
                tools:text="Je dÃ©fendrais ma vie" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_view_play_count_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_play_count_label"
                app:layout_constraintWidth_percent=".5"
                tools:text="42526" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_view_link_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/album_details_album_url_hint"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_album_name_content"
                app:layout_constraintWidth_percent=".5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_view_tracks_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/album_details_album_tracks_hint"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_play_count_content"
                app:layout_constraintWidth_percent=".5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_view_link_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_link_label"
                app:layout_constraintWidth_percent=".5"
                tools:text="https://base.com" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_view_track_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_tracks_hint"
                app:layout_constraintWidth_percent=".5"
                tools:text="[Track 1 - Track 2 - Track 3]" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>